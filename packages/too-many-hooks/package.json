{
  "name": "@yobgob/too-many-hooks",
  "version": "0.0.1",
  "description": "Collection of typed React hooks",
  "repository": {
    "type": "git",
    "url": "https://github.com/yobgob/too-many-hooks"
  },
  "keywords": [
    "react",
    "hooks",
    "typescript"
  ],
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/too-many-hooks.umd.cjs",
  "module": "./dist/too-many-hooks.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/too-many-hooks.js",
      "require": "./dist/too-many-hooks.umd.cjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "get-changed": "git diff --relative -r --name-only --diff-filter=ACMRTUXB origin/main | grep -E '.*\\.ts$|.*\\.tsx$|.*\\.js$|.*\\.jsx$' || true",
    "run-on-changed": "changed_files=$(yarn get-changed) && [ -n \"$changed_files\" ] && $@ $changed_files || true",
    "lint:format:base": "prettier --check",
    "lint:code:base": "eslint --max-warnings=0",
    "lint:format": "yarn run-on-changed 'yarn lint:format:base'",
    "lint:code": "yarn run-on-changed 'yarn lint:code:base'",
    "lint:types": "tsc --noEmit",
    "lint": "concurrently \"yarn lint:format\" \"yarn lint:code\" \"yarn lint:types\"",
    "lint:format:all": "yarn lint:format:base .",
    "lint:code:all": "yarn lint:code:base .",
    "lint:all": "concurrently \"yarn lint:format:all\" \"yarn lint:code:all\" \"yarn lint:types\"",
    "format:base": "prettier --write",
    "format": "yarn run-on-changed 'yarn format:base'",
    "format:all": "yarn format:base ."
  },
  "dependencies": {
    "lodash.isequal": "^4.5.0",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/lodash.isequal": "^4.5.6",
    "@types/node": "^20.5.6",
    "@types/react": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.1",
    "eslint": "^8.47.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-you-dont-need-lodash-underscore": "^6.13.0",
    "mkdirp": "^3.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-organize-imports": "^3.2.3",
    "typescript": "5.2.2",
    "vite": "^4.4.9",
    "vite-plugin-dts": "^3.5.2"
  }
}
